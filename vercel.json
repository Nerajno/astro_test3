{
    "buildCommand": "npm run vercel-build",
    "outputDirectory": "dist",
    "framework": "astro",
    "builds": [
      {
        "src": "src/**/*",
        "use": "@astrojs/vercel/serverless"
      }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/(.*)", "dest": "/index.html" }
    ]
  }
